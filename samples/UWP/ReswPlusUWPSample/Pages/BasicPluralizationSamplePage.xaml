<Page
    x:Class="ReswPlusUWPSample.Pages.BasicPluralizationSamplePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:strings="using:ReswPlusUWPSample.Strings"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">
    <ScrollViewer>
        <StackPanel Margin="24">
            <TextBlock Style="{StaticResource SectionDescriptionTextBlockStyle}" Text="Plural forms are a lot more complex than we think, there is no generic rules to manage plurals, each languages have their specific rules. For example 0 can be singular or plural depends of the language, some languages has more than 2 forms, etc...&#x0a;&#x0a;When associated to ReswPlus, Resw can support pluralization of your strongly typed resources." />

            <StackPanel Style="{StaticResource PartStyle}">
                <TextBlock Style="{StaticResource TitleTextBlockStyle}" Text="String Pluralization" />
                <TextBlock Style="{StaticResource LabelTextBlockStyle}" Text="Resource:" />
                <StackPanel Style="{StaticResource SubPanelStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="24" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="PluralizationTest_One" />
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="2"
                            Text="This is the singular form" />
                        <TextBlock Grid.Row="1" Text="PluralizationTest_Others" />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="2"
                            Text="This is the plural form" />
                    </Grid>
                </StackPanel>
                <TextBlock Style="{StaticResource LabelTextBlockStyle}" Text="Code generated by ReswPlus:" />
                <StackPanel Style="{StaticResource SubPanelStyle}">
                    <TextBlock Style="{StaticResource DescriptionTextBlockStyle}" Text="public static string PluralizationTest(double pluralizationReferenceNumber)&#x0a;{&#x0a;    return ReswPlus.ResourceLoaderExtension.GetPlural(_resourceLoader, &quot;PluralizationTest&quot;, pluralizationReferenceNumber, false);&#x0a;}" />
                </StackPanel>

                <TextBlock Style="{StaticResource LabelTextBlockStyle}" Text="XAML:" />
                <StackPanel Style="{StaticResource SubPanelStyle}">
                    <TextBlock Style="{StaticResource DescriptionTextBlockStyle}" Text="&#x3C;TextBlock Text=&#x22;{x:Bind strings:Resources.PluralizationTest(1)}&#x22; /&#x3E;&#x0a;&#x3C;TextBlock Text=&#x22;{x:Bind strings:Resources.PluralizationTest(99)}&#x22; /&#x3E;" />
                </StackPanel>
                <TextBlock Style="{StaticResource LabelTextBlockStyle}" Text="Results:" />

                <StackPanel Style="{StaticResource SubPanelStyle}">
                    <TextBlock Text="{x:Bind strings:Resources.PluralizationTest(1)}" />
                    <TextBlock Text="{x:Bind strings:Resources.PluralizationTest(99)}" />
                </StackPanel>
            </StackPanel>

            <StackPanel Style="{StaticResource PartStyle}">
                <TextBlock Style="{StaticResource TitleTextBlockStyle}" Text="Pluralization with formatting" />
                <TextBlock Style="{StaticResource LabelTextBlockStyle}" Text="Resource:" />
                <StackPanel Style="{StaticResource SubPanelStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="24" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="24" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock FontWeight="Bold" Text="Key" />
                        <TextBlock
                            Grid.Column="2"
                            FontWeight="Bold"
                            Text="Value" />
                        <TextBlock
                            Grid.Column="4"
                            FontWeight="Bold"
                            Text="Comment" />
                        <TextBlock Grid.Row="1" Text="MinutesLeft_One" />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="2"
                            Text="{}{0} minute left" />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="4"
                            Text="#Format[Plural]" />
                        <TextBlock Grid.Row="2" Text="MinutesLeft_Other" />
                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="2"
                            Text="{}{0} minutes left" />
                    </Grid>
                </StackPanel>
                <TextBlock Style="{StaticResource SectionDescriptionTextBlockStyle}" Text="Type something in the TextBox, then click on Generate. Observe that it takes ~2 seconds to display the result. Click then on 'Clear Result' then on 'Generate', the result will be displayed instantaneously." />

                <TextBlock Style="{StaticResource LabelTextBlockStyle}" Text="Code generated by ReswPlus:" />
                <StackPanel Style="{StaticResource SubPanelStyle}">
                    <TextBlock Style="{StaticResource DescriptionTextBlockStyle}" Text="public static string MinutesLeft(double pluralCount)&#x0a;{&#x0a;    return string.Format(ReswPlus.ResourceLoaderExtension.GetPlural(_resourceLoader, &quot;MinutesLeft&quot;, pluralCount, false), pluralCount);&#x0a;}" />
                </StackPanel>

                <TextBlock Style="{StaticResource LabelTextBlockStyle}" Text="XAML:" />
                <StackPanel Style="{StaticResource SubPanelStyle}">
                    <TextBlock Style="{StaticResource DescriptionTextBlockStyle}" Text="&#x3C;Slider x:Name=&#x22;MinutesSlider&#x22; /&#x3E;&#x0a;&#x3C;TextBlock Text=&#x22;{x:Bind strings:Resources.MinutesLeft(MinutesSlider.Value), Mode=OneWay}&#x22; /&#x3E;" />
                </StackPanel>
                <TextBlock Style="{StaticResource LabelTextBlockStyle}" Text="Results:" />

                <StackPanel Style="{StaticResource SubPanelStyle}">
                    <Slider
                        x:Name="MinutesSlider"
                        Maximum="10"
                        Minimum="0"
                        Value="1" />
                    <TextBlock Text="{x:Bind strings:Resources.MinutesLeft(MinutesSlider.Value), Mode=OneWay}" />
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
