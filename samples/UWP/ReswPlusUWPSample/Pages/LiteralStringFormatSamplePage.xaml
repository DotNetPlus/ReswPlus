<Page
    x:Class="ReswPlusUWPSample.Pages.LiteralStringFormatSamplePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:strings="using:ReswPlusUWPSample.Strings"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">
    <ScrollViewer>
        <StackPanel Margin="24">
            <TextBlock Style="{StaticResource SectionDescriptionTextBlockStyle}" Text="When using String Formatting, you can replace one or many parameters by one a literal string. ReswPlus will automatically insert it in your template string." />

            <StackPanel Style="{StaticResource PartStyle}">
                <TextBlock Style="{StaticResource TitleTextBlockStyle}" Text="Use literal in string formatting" />
                <TextBlock Style="{StaticResource LabelTextBlockStyle}" Text="Resource:" />
                <StackPanel Style="{StaticResource SubPanelStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="24" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="24" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock FontWeight="Bold" Text="Key" />
                        <TextBlock
                            Grid.Column="2"
                            FontWeight="Bold"
                            Text="Value" />
                        <TextBlock
                            Grid.Column="4"
                            FontWeight="Bold"
                            Text="Comment" />
                        <TextBlock Grid.Row="1" Text="DownloadOurApp" />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="2"
                            Text="Download our apps in {0}" />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="4"
                            Text="#Format[&quot;Microsoft Store&quot;]" />
                    </Grid>
                </StackPanel>
                <TextBlock Style="{StaticResource LabelTextBlockStyle}" Text="Code generated by ReswPlus:" />
                <StackPanel Style="{StaticResource SubPanelStyle}">
                    <TextBlock Style="{StaticResource DescriptionTextBlockStyle}" Text="public static string DownloadOurApp&#x0a;{&#x0a;    get&#x0a;    {&#x0a;        return string.Format(_resourceLoader.GetString(&quot;DownloadOurApp&quot;), &quot;Microsoft Store&quot;);&#x0a;    }&#x0a;}" />
                </StackPanel>
                <TextBlock Style="{StaticResource LabelTextBlockStyle}" Text="XAML:" />
                <StackPanel Style="{StaticResource SubPanelStyle}">
                    <TextBlock Style="{StaticResource DescriptionTextBlockStyle}" Text="&lt;TextBlock Text=&quot;{x:Bind strings:Resources.DownloadOurApp}&quot; /&gt;" />
                </StackPanel>
                <TextBlock Style="{StaticResource LabelTextBlockStyle}" Text="Results:" />

                <StackPanel Style="{StaticResource SubPanelStyle}">
                    <TextBlock FontWeight="Bold" Text="{x:Bind strings:Resources.DownloadOurApp}" />
                </StackPanel>
            </StackPanel>

            <StackPanel Style="{StaticResource PartStyle}">
                <TextBlock Style="{StaticResource TitleTextBlockStyle}" Text="Mix parameters and Literals" />
                <TextBlock Style="{StaticResource LabelTextBlockStyle}" Text="Resource:" />
                <StackPanel Style="{StaticResource SubPanelStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="24" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="24" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock FontWeight="Bold" Text="Key" />
                        <TextBlock
                            Grid.Column="2"
                            FontWeight="Bold"
                            Text="Value" />
                        <TextBlock
                            Grid.Column="4"
                            FontWeight="Bold"
                            Text="Comment" />
                        <TextBlock Grid.Row="1" Text="DonateToAssociation" />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="2"
                            Text="Hey {1}, donate {2:C2} to {0}!" />
                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="4"
                            Text="#Format[&quot;WWF&quot;, String username, Int amount]" />
                    </Grid>
                </StackPanel>
                <TextBlock Style="{StaticResource LabelTextBlockStyle}" Text="XAML:" />
                <StackPanel Style="{StaticResource SubPanelStyle}">
                    <TextBlock Style="{StaticResource DescriptionTextBlockStyle}" Text="&lt;TextBox&#x0a;    x:Name=&quot;YourNameTextBox&quot;&#x0a;    Header=&quot;Enter your name&quot;&#x0a;    Text=&quot;Joe&quot; /&gt;&#x0a;&lt;Slider&#x0a;    x:Name=&quot;AmountSlider&quot;&#x0a;    Header=&quot;Amount&quot;&#x0a;    Maximum=&quot;127&quot;&#x0a;    Minimum=&quot;0&quot;&#x0a;    Value=&quot;35&quot; /&gt;&#x0a;&lt;TextBlock&#x0a;    Margin=&quot;0,12,0,0&quot;&#x0a;    FontWeight=&quot;Bold&quot;&#x0a;    Text=&quot;{x:Bind strings:Resources.DonateToAssociation(YourNameTextBox.Text, (x:Int32)AmountSlider.Value), Mode=OneWay}&quot; /&gt;" />
                </StackPanel>
                <TextBlock Style="{StaticResource LabelTextBlockStyle}" Text="Results:" />

                <StackPanel Style="{StaticResource SubPanelStyle}">
                    <TextBox
                        x:Name="YourNameTextBox"
                        Header="Enter your name"
                        Text="Joe" />
                    <Slider
                        x:Name="AmountSlider"
                        Header="Amount"
                        Maximum="127"
                        Minimum="0"
                        Value="35" />
                    <TextBlock
                        Margin="0,12,0,0"
                        FontWeight="Bold"
                        Text="{x:Bind strings:Resources.DonateToAssociation(YourNameTextBox.Text, (x:Int32)AmountSlider.Value), Mode=OneWay}" />
                </StackPanel>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</Page>
