<Page
    x:Class="ReswPlusWinAppSDKSample.Pages.MacroSamplePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:strings="using:ReswPlusWinAppSDKSample.Strings"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">
    <ScrollViewer>
        <StackPanel Margin="24">
            <TextBlock Style="{StaticResource SectionDescriptionTextBlockStyle}" Text="When using String Formatting, you can replace one or many parameters by one of the Macro provided by ReswPlus to automatically insert Date, time, OS version, Application name... in your strings." />

            <StackPanel Style="{StaticResource PartStyle}">
                <TextBlock Style="{StaticResource TitleTextBlockStyle}" Text="Macros available" />
                <StackPanel Style="{StaticResource SubPanelStyle}">
                    <TextBlock
                        Margin="0,12"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Text="All versions:" />

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="146" />
                            <ColumnDefinition Width="24" />
                            <ColumnDefinition Width="220" />
                            <ColumnDefinition Width="24" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            FontWeight="Bold"
                            Text="Macro" />
                        <TextBlock
                            Grid.Column="2"
                            FontWeight="Bold"
                            Text="Description" />
                        <TextBlock
                            Grid.Column="4"
                            FontWeight="Bold"
                            Text="Example" />
                        <TextBlock Grid.Row="1" Text="DATE" />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="2"
                            Text="Current date" />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="4"
                            Text="Monday, June 15, 2009" />

                        <TextBlock Grid.Row="2" Text="SHORT_DATE" />
                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="2"
                            Text="Current date" />
                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="4"
                            Text="6/15/2009" />

                        <TextBlock Grid.Row="3" Text="TIME" />
                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="2"
                            Text="Current time, including seconds" />
                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="4"
                            Text="1:45:30 PM" />

                        <TextBlock Grid.Row="4" Text="SHORT_TIME" />
                        <TextBlock
                            Grid.Row="4"
                            Grid.Column="2"
                            Text="Current time, only hours/minutes" />
                        <TextBlock
                            Grid.Row="4"
                            Grid.Column="4"
                            Text="1:45 PM" />

                        <TextBlock Grid.Row="5" Text="WEEKDAY" />
                        <TextBlock
                            Grid.Row="5"
                            Grid.Column="2"
                            Text="Name of the day" />
                        <TextBlock
                            Grid.Row="5"
                            Grid.Column="4"
                            Text="Wednesday" />

                        <TextBlock Grid.Row="6" Text="SHORT_WEEKDAY" />
                        <TextBlock
                            Grid.Row="6"
                            Grid.Column="2"
                            Text="Name of the day" />
                        <TextBlock
                            Grid.Row="6"
                            Grid.Column="4"
                            Text="Wed" />


                        <TextBlock Grid.Row="7" Text="YEAR" />
                        <TextBlock
                            Grid.Row="7"
                            Grid.Column="2"
                            Text="Current year" />
                        <TextBlock
                            Grid.Row="7"
                            Grid.Column="4"
                            Text="2019" />

                        <TextBlock Grid.Row="8" Text="SHORT_YEAR" />
                        <TextBlock
                            Grid.Row="8"
                            Grid.Column="2"
                            Text="Current year" />
                        <TextBlock
                            Grid.Row="8"
                            Grid.Column="4"
                            Text="19" />

                        <TextBlock Grid.Row="9" Text="LOCALE_NAME" />
                        <TextBlock
                            Grid.Row="9"
                            Grid.Column="2"
                            Text="Name of the language" />
                        <TextBlock
                            Grid.Row="9"
                            Grid.Column="4"
                            Text="French" />

                        <TextBlock Grid.Row="10" Text="LOCALE_ID" />
                        <TextBlock
                            Grid.Row="10"
                            Grid.Column="2"
                            Text="Id of the language" />
                        <TextBlock
                            Grid.Row="10"
                            Grid.Column="4"
                            Text="en_US" />

                        <TextBlock Grid.Row="11" Text="LOCALE_TWO_LETTERS" />
                        <TextBlock
                            Grid.Row="11"
                            Grid.Column="2"
                            Text="ISO 639-1 code for the language" />
                        <TextBlock
                            Grid.Row="11"
                            Grid.Column="4"
                            Text="en" />
                    </Grid>

                    <TextBlock
                        Margin="0,12"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Text="Only UWP and .Net Core:" />

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="146" />
                            <ColumnDefinition Width="24" />
                            <ColumnDefinition Width="220" />
                            <ColumnDefinition Width="24" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            FontWeight="Bold"
                            Text="Macro" />
                        <TextBlock
                            Grid.Column="2"
                            FontWeight="Bold"
                            Text="Description" />
                        <TextBlock
                            Grid.Column="4"
                            FontWeight="Bold"
                            Text="Example" />
                        <TextBlock Grid.Row="1" Text="VERSION" />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="2"
                            Text="Full version number of the app" />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="4"
                            Text="12.4.1.0" />

                        <TextBlock Grid.Row="2" Text="VERSION_XYZ" />
                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="2"
                            Text="Version number of the app: major.minor.rev" />
                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="4"
                            Text="12.4.1" />

                        <TextBlock Grid.Row="3" Text="VERSION_XY" />
                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="2"
                            Text="Version number of the app: major.minor" />
                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="4"
                            Text="12.4" />

                        <TextBlock Grid.Row="4" Text="VERSION_X" />
                        <TextBlock
                            Grid.Row="4"
                            Grid.Column="2"
                            Text="Major version number of the app" />
                        <TextBlock
                            Grid.Row="4"
                            Grid.Column="4"
                            Text="12" />

                        <TextBlock Grid.Row="5" Text="APP_NAME" />
                        <TextBlock
                            Grid.Row="5"
                            Grid.Column="2"
                            Text="Application/site name" />
                        <TextBlock
                            Grid.Row="5"
                            Grid.Column="4"
                            Text="ContosoPlus" />
                    </Grid>
                    <TextBlock
                        Margin="0,12"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Text="Only UWP:" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="146" />
                            <ColumnDefinition Width="24" />
                            <ColumnDefinition Width="220" />
                            <ColumnDefinition Width="24" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            FontWeight="Bold"
                            Text="Macro" />
                        <TextBlock
                            Grid.Column="2"
                            FontWeight="Bold"
                            Text="Description" />
                        <TextBlock
                            Grid.Column="4"
                            FontWeight="Bold"
                            Text="Example" />
                        <TextBlock Grid.Row="1" Text="ARCHITECTURE" />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="2"
                            Text="Architecture of the app (not the OS)" />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="4"
                            Text="x64" />

                        <TextBlock Grid.Row="2" Text="PUBLISHER_NAME" />
                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="2"
                            Text="Name of the publisher" />
                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="4"
                            Text="6Studio" />

                        <TextBlock Grid.Row="3" Text="DEVICE_FAMILY" />
                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="2"
                            Text="Type of device" />
                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="4"
                            Text="Windows.Desktop" />

                        <TextBlock Grid.Row="4" Text="DEVICE_MODEL" />
                        <TextBlock
                            Grid.Row="4"
                            Grid.Column="2"
                            Text="Model of the device" />
                        <TextBlock
                            Grid.Row="4"
                            Grid.Column="4"
                            Text="Surface Laptop 2" />

                        <TextBlock Grid.Row="5" Text="OS_VERSION" />
                        <TextBlock
                            Grid.Row="5"
                            Grid.Column="2"
                            Text="Version of the OS" />
                        <TextBlock
                            Grid.Row="5"
                            Grid.Column="4"
                            Text="10.0.18362.116" />
                    </Grid>

                </StackPanel>
            </StackPanel>

            <StackPanel Style="{StaticResource PartStyle}">
                <TextBlock Style="{StaticResource TitleTextBlockStyle}" Text="Example" />
                <TextBlock Style="{StaticResource LabelTextBlockStyle}" Text="Resource:" />
                <StackPanel Style="{StaticResource SubPanelStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="24" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="24" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock FontWeight="Bold" Text="Key" />
                        <TextBlock
                            Grid.Column="2"
                            FontWeight="Bold"
                            Text="Value" />
                        <TextBlock
                            Grid.Column="4"
                            FontWeight="Bold"
                            Text="Comment" />
                        <TextBlock Grid.Row="1" Text="CopyrightNotice" />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="2"
                            Text="Â© {0} - {1}. All rights reserved." />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="4"
                            Text="#Format[YEAR, PUBLISHER_NAME]" />

                        <TextBlock Grid.Row="2" Text="AppVersion" />
                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="2"
                            Text="version: {0} v{1}." />
                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="4"
                            Text="#Format[APP_NAME, VERSION]" />

                        <TextBlock Grid.Row="3" Text="WelcomeMessageDay" />
                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="2"
                            Text="Welcome {0}! Have a good {1}" />
                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="4"
                            Text="#Format[String username, DAY]" />
                    </Grid>
                </StackPanel>

                <TextBlock Style="{StaticResource LabelTextBlockStyle}" Text="XAML:" />
                <StackPanel Style="{StaticResource SubPanelStyle}">
                    <TextBlock Style="{StaticResource DescriptionTextBlockStyle}" Text="&lt;TextBlock Text=&quot;{x:Bind strings:Resources.CopyrightNotice}&quot; /&gt;&#x0a;&lt;TextBlock Text=&quot;{x:Bind strings:Resources.AppVersion}&quot; /&gt;&#x0a;&lt;TextBox x:Name=&quot;UsernameTextBox&quot; Header=&quot;Enter username:&quot; Text=&quot;Rudy&quot; Margin=&quot;0,12,0,0&quot; /&gt;&#x0a;&lt;TextBlock Text=&quot;{x:Bind strings:Resources.WelcomeMessageDay(UsernameTextBox.Text), Mode=OneWay}&quot; /&gt;" />
                </StackPanel>
                <TextBlock Style="{StaticResource LabelTextBlockStyle}" Text="Results:" />

                <StackPanel Style="{StaticResource SubPanelStyle}">
                    <TextBlock Text="{x:Bind strings:Resources.CopyrightNotice}" />
                    <TextBlock Text="{x:Bind strings:Resources.AppVersion}" />

                    <TextBox
                        x:Name="UsernameTextBox"
                        Margin="0,12,0,0"
                        Header="Enter username:"
                        Text="Rudy" />
                    <TextBlock Text="{x:Bind strings:Resources.WelcomeMessageDay(UsernameTextBox.Text), Mode=OneWay}" />
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
