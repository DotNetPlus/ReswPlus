<Page
    x:Class="TestCppWinRT.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:strings="using:TestCppWinRT.Strings"
    mc:Ignorable="d">

    <Grid>
        <StackPanel Margin="48">
            <TextBlock x:Name="HelloTextBlock" FontWeight="Bold" Text="{x:Bind strings:Resources.Hello}" />
            <TextBlock FontWeight="Bold" Text="{strings:Resources Key=Hello}" />
            <TextBlock FontWeight="Bold" Text="{x:Bind strings:Resources.TestWithObject_Format(Str)}" />
            <TextBox
                x:Name="UserNameText"
                Margin="0,6"
                Header="Username:"
                Text="Sarah" />
            <Slider
                x:Name="EmailsSlider"
                Margin="0,6"
                Header="Number of emails:"
                Maximum="10"
                Value="2" />
            <TextBlock Text="{x:Bind strings:Resources.YouGotEmails_Format(EmailsSlider.Value, UserNameText.Text), Mode=OneWay}" />
        </StackPanel>
    </Grid>
</Page>
